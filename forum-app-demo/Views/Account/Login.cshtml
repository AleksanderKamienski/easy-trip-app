@using Forum.Web.Models.AccountViewModels
@using Microsoft.AspNetCore.Identity
@model LoginViewModel
@inject SignInManager<Forum.Data.Models.ApplicationUser> SignInManager


    <div class="jumbotron jumbotron-fluid">

        <h1 class="display-4">Sign In</h1>

        <p class="lead">Sign in to your account to post in the forums</p>
        <a class="btn btn-back" role="button" asp-area="" asp-controller="Home" asp-action="Index">Go back</a>
        <hr class="my-4">
        <p>Please fill in the below fields.</p>
        <p>Database seeding users:</p>
        <p>Username: Alek, Jan, Krzysiek, Jarek, Ewa</p>
        <p>Password for all users listed above: Test12#</p>

        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="RememberMe">
                        <input asp-for="RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-success">Log in</button>
            </div>
            <div class="form-group">
                <p>
                    <a asp-action="ForgotPassword">Forgot your password?</a>
                </p>
                <p>
                    <a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
                </p>
            </div>
        </form>

    </div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
