@model Forum.Web.Models.Forum.DeleteForumModel

<div class="jumbotron jumbotron-fluid">

    <h1 class="display-4">We are sad!</h1>

    <p class="lead">Are you sure you'd like to delete forum @Model.ForumName?</p>

    <hr class="my-4">
    <p>Please chose your option.</p>
    <a class="btn btn-danger" role="button" asp-controller="Forum" asp-action="ConfirmDelete" asp-route-id="@Model.ForumId">Delete</a>
    <a class="btn btn-success" role="button" asp-controller="Forum" asp-action="Cancel" asp-route-Id="@Model.GroupId">Cancel</a>
</div>