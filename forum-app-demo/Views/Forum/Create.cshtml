@model Forum.Web.Models.Forum.AddForumModel

    <div class="jumbotron jumbotron-fluid">

        <h1 class="display-4">Create new forum!</h1>

        <p class="lead">Please take some moment see current forums.</p>
        <a class="btn btn-back" role="button" asp-controller="Group" asp-action="Index">Go back to group list</a>
        <hr class="my-4">
        <p>Please fill in the below fields.</p>
        <form asp-action="AddForum" method="post" id="createForumForm" enctype="multipart/form-data">
            <div class="form-group">
                <label for="GroupName" asp-for="Title">Name</label>
                <input class="form-control" id="GroupName" placeholder="New title" asp-for="Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="FormControlTextarea1" asp-for="Description">Description</label>
                <textarea class="form-control" id="FormControlTextarea1" rows="3" placeholder="New description" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div id="upload">
                <label>Upload Image</label>
                <br />
                <label class="btn btn-default btn-file">
                    Browse <input class="btn btn-file" asp-for="ImageUpload" type="file" style="display: none;">
                </label>
            </div>
            <br />
            <button type="submit" id="registerBtn" class="btn btn-primary">Create</button>
            <input asp-for="GroupId" type="hidden" />
        </form>
    </div>